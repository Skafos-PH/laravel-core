{
    "name": "skafos/laravel-core",
    "description": "Core Laravel package for Skafos services",
    "license": "MIT",
    "authors": [
        {
            "name": "Jefferson Asis",
            "email": "asis.jefferson.prog@gmail.com"
        },
        {
            "name": "John Ryan Camatog",
            "email": "john.ryan.camatog@gmail.com"
        },
        {
            "name": "Jonan Pineda",
            "email": "jonan.pineda@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0 || ^9.0 || ^10.0",
        "doctrine/dbal": "^2.8 || ^3.0",
        "guzzlehttp/guzzle": "^6.3 || ^7.2",
        "intervention/image": "^2.4",
        "nesbot/carbon": "^1.24.1 || ^2.31"
    },
    "autoload": {
        "files": [
            "app/Helpers/helpers.php"
        ],
        "psr-4": {
            "Skafos\\": "app/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Skafos\\Providers\\CoreServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
